  <form method="POST" action="/UpdateProfilAdmin" enctype="multipart/form-data">
    <div class="row">
      <div class="col-md-5">
        <div class="row">
          <div class="col-12 bg-white p-0 px-3 py-3 mb-3">
            <div class="d-flex flex-column align-items-center">
              <img
                style="height: 500px; width: 200%"
                class="photo"
                src="/uploads/<%= Profil.image%>"
                alt=""
              />
              <br />
              <input
                type="file"
                accept=".jpg,.png,.jpeg"
                placeholder="telecharger une image"
                name="image"
              />
              <br />
              <input type="hidden" name="Oldimage" value="<%= Profil.image%>" />
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-7 ps-md-4">
        <div class="row">
          <div class="col-12 bg-white px-3 mb-3 pb-3">
            <div
              class="d-flex align-items-center justify-content-between border-bottom"
            >
              <p class="py-2">Full Name</p>
              <input type="text" name="nom" value="<%=Profil.nom%>" />
            </div>
            <div
              class="d-flex align-items-center justify-content-between border-bottom"
            >
              <p class="py-2">Email</p>
              <input type="email" name="email" value="<%= Profil.email%>" />
            </div>
            <div
              class="d-flex align-items-center justify-content-between border-bottom"
            >
              <p class="py-2">Phone Number</p>
              <input type="number" name="numero" value="<%= Profil.numero%>" />
            </div>
            <div
              class="d-flex align-items-center justify-content-between border-bottom"
            >
              <p class="py-2">status</p>
              <input type="text" name="status" value="<%= Profil.status%>" />
            </div>
            <div
              class="d-flex align-items-center justify-content-between border-bottom"
            >
              <p class="py-2">Address</p>

              <input type="text" name="address" value="<%= Profil.address%>" />
            </div>
            <div
              class="d-flex align-items-center justify-content-between border-bottom"
            >
              <p class="py-2">work</p>
              <input type="text" name="travail" value="<%= Profil.travail%>" />
            </div>
            <div
              class="d-flex align-items-center justify-content-between border-bottom"
            >
              <p class="py-2">Sexe</p>

              <input type="text" name="Sexe" value="<%= Profil.Sexe%>" />
            </div>
            <br />
            <br />
            <br />
            <br />
          </div>
        </div>
      </div>
    </div>
    <input type="hidden" name="Idprofile" value="<%= Profil._id%>" />
    <button
      class="btn btn-primary"
      type="submit"
      style="color: white; margin-left: 40%"
    >
      <h1>Update</h1>
    </button>
  </form>
</div>
